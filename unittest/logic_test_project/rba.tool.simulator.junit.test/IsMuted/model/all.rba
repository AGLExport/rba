Package Displays {
	Zone ゾーンA {
		arbitrationPolicy: DEFAULT
		visibility: > That-of ゾーンB
		attenuateValue:1
	}
	Zone ゾーンB {
		arbitrationPolicy: DEFAULT
		visibility: > That-of ゾーンC
		attenuateValue:2
	}
	Zone ゾーンC {
		arbitrationPolicy: DEFAULT
		visibility: NONE_VALUE
		attenuateValue:3
	}

	SoundContent コンテンツA1{
		allocatable: [
			ゾーンA
		]
		State NORMAL {
			priority: > That-of コンテンツB1.NORMAL
		}
	}
	SoundContent コンテンツB1 {
		allocatable: [
			ゾーンB
		]
		State NORMAL {
			priority: > That-of コンテンツC1.NORMAL
		}
	}
	SoundContent コンテンツC1 {
		allocatable: [
			ゾーンC
		]
		State NORMAL {
			priority: MIN_VALUE
		}
	}

	Constraint IsMuted {
		runtime: true
		コンテンツA1.isSounding() -> ゾーンB.isMuted()
	}
}
